    BS --> CS
    BS --> CHS
    IS --> TP
    IS --> KUBECTL
    SS --> KUBECTL
    
    CS --> EXEC
    CHS --> EXEC
    IS --> EXEC
    SS --> EXEC
    
    CS --> UI
    CHS --> UI
    IS --> UI
    SS --> UI
    
    ALL --> CONFIG
    ALL --> ERRORS
